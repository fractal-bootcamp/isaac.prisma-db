generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id     Int    @id @default(autoincrement())
  Title  String
  Author String
  ISBN   String
}

model Author {
  id        Int    @id @default(autoincrement())
  Name      String
  Biography String
}

model Genre {
  id      Int    @id @default(autoincrement())
  Name    String
  Email   String
  Address String
}

model Member {
  id      Int    @id @default(autoincrement())
  Name    String
  Email   String
  Address String
}
